<h1>Edit photo details below</h1>

<%= form_for @photo do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.file_field :avatar %>
<%= f.submit %>
<% end %>

<%= link_to "Delete #{@photo.name}", photo_path(@photo), method: :delete %>
