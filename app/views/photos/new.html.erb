<!DOCTYPE html>

<div class="container">

<h1>Share your expereinces</h1>
<br>

<%= form_for(@photo, html: {multipart: true}) do |f| %>
<div class="form-group row">
  <label for="name" class="col-xs-2 col-form-label">  <%= f.label :name %></label>
    <div class="col-xs-10" id="name">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <label for="name" class="col-xs-2 col-form-label">  <%= f.label :description %></label>
      <div class="col-xs-10" id="name">
        <%= f.text_field :description, class: 'form-control' %>
      </div>
    </div>
  <p><%= f.file_field :avatar %></p>
  <p><%= f.submit(class: "btn btn-primary") %></p>
  <% end %>
</div>
