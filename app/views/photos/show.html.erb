<!DOCTYPE html>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="row">
        <div class="col-md-9">
          <h4>Name: <%= @photo.name %></h4>
        </div>
        <div class="panel-body">
          <h4>Description  <%= @photo.description %></h4>

<%= link_to "Edit #{@photo.name}", edit_photo_path(@photo) %>

<%= link_to "Add comment", new_photo_comment_path(@photo) %>

<%= link_to "View comments", photo_comments_path(@photo) %>

<%= image_tag(@image_url) %>

</div>
